{
  "name": "@emailverify-ai/node",
  "version": "1.0.1",
  "description": "Official EmailVerify Node.js SDK for email verification",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "email",
    "verification",
    "validation",
    "emailverify",
    "email-verification"
  ],
  "author": "EmailVerify",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/emailverify-ai/node-sdk.git"
  },
  "homepage": "https://emailverify.ai",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
